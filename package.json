{
  "name": "webapp",
  "version": "1.0.0",
  "engines": {
    "npm": "6.9.0",
    "node": "10.16.0"
  },
  "scripts": {
    "client": "cd client && npm start",
    "server": "node app.js",
    "dev": "concurrently --kill-others-on-fail \"npm server\" \"npm client\"",
    "start": "node app.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.16.0",
    "cors": "^2.8.5",
    "express": "^4.14.0"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  }
}
